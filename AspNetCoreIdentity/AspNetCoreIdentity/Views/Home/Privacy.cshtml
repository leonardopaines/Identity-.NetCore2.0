@using AspNetCoreIdentity.Extensions;
@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

@{
    if (this.IfClaim("Produtos", "Adicionar"))
    {
        <p>Você só verá isso se tiver permissao de adicionar</p>
    }

}

<div>
    @Html.ActionLink("Adicionar", "Privacy").IfClaimShow(Context, "Produtos", "Adicionar")
</div>

<div>
    <a href="#" class="btn btn-danger @Html.Raw(this.IfClaimShow("Produtos", "Excluir"))">Excluir</a>
</div>